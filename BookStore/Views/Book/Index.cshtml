@model IEnumerable< BookStore.Service.Models.BookDTO>

<h2	>
	Kategoriler
</h2>

<p>
	<a asp-action="Create" class="btn btn-primary">Yeni Kitap Ekle</a>
</p>

@if (TempData["succes"] != null)
{

	@section Scripts{
	<script>
		toastr.success('@TempData["succes"]');
	</script>
            }


}

@if (TempData["error"] != null)
{
	@section Scripts{
	<script>
		toastr.error('@TempData["error"]');
	</script>
            }
}




<table class=" table table-bordered">

	<tr>
		
		<th>Adı</th>
		<th>Yazar</th>
		<th>Yayın Yılı</th>
		<th>Kategori</th>

	</tr>

	@foreach (var item in Model)
	{

		<tr>
			<td>@item.Id</td>
			<td>@item.Name</td>
			<td>@item.Writer</td>
			<td>@item.Year</td>
			<td>@item.CategoryName</td>

			<td>
				<a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-info">Düzenle </a>
				<a asp-action="Delete"asp-route-id="@item.Id" class=" btn btn-danger" >Sil </a>
			</td>

		</tr>
	}


</table>


